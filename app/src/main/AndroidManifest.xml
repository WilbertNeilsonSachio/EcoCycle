        android:label="@string/app_name"
        android:roundIcon="@drawable/ecocycle_icon"
        android:supportsRtl="true"
        android:theme="@style/Theme.ProjectEcoCycle"
        tools:targetApi="31">

        <activity
            android:name=".SalePageActivity"
            android:exported="false"
            android:windowSoftInputMode="adjustPan"/>
        <activity
            android:name=".CoinPageActivity"
            android:exported="false" />
        <activity
            android:name=".NotificationPageActivity"
            android:exported="false" />
        <activity
            android:name=".LocationPageActivity"
            android:exported="false" />
        <activity
            android:name=".AkunPageActivity"
            android:exported="false" />
        <activity
            android:name=".BantuanPageActivity"
            android:exported="false" />
        <activity
            android:name=".TransaksiPageActivity"
            android:exported="false" />
        <activity
            android:name=".DraftAllTrashPageActivity"
            android:exported="false" />
        <activity
            android:name=".DraftGlassPageActivity"
            android:exported="false" />
        <activity
            android:name=".DraftPaperPageActivity"
            android:exported="false" />
        <activity
            android:name=".DraftPlasticPageActivity"
            android:exported="false" />
        <activity
            android:name=".HomePageActivity"
            android:exported="false" />
        <activity
            android:name=".ConfirmationRegisterPageActivity"
            android:exported="false" />
        <activity
            android:name=".RegisterPageActivity"
            android:exported="false" />
        <activity
            android:name=".LoginPageActivity"
            android:exported="true" />
        <activity
            android:name=".LoadingPageActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
        <meta-data
            android:name="com.google.android.gms.auth.api.signin.CLIENT_ID"
            android:value="@string/default_web_client_id" />
    </application>

</manifest>