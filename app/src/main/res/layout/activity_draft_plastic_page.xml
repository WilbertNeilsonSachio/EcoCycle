<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".DraftPlasticPageActivity"
    android:background="@color/greybg">

    <ImageView
        android:id="@+id/lataratas"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="-25dp"
        android:src="@drawable/upasset"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/navigation_bottom">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/whiteecocycle"
                    android:layout_margin="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/logoputih"/>
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="end">
                <ImageView
                    android:id="@+id/notificon"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="15dp"
                    android:src="@drawable/icon_notif"/>
            </LinearLayout>
        </LinearLayout>

        <androidx.cardview.widget.CardView
            android:id="@+id/whitebg_mission"
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:layout_marginTop="55dp"
            android:layout_marginLeft="22dp"
            android:layout_marginRight="22dp"
            app:cardCornerRadius="20dp"
            android:foregroundGravity="fill"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@id/whiteecocycle">

            <LinearLayout
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_height="wrap_content">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:orientation="horizontal"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="23dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ImageView
                        android:id="@+id/logokoin"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/logo_coin" />

                    <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:paddingStart="8dp">

                        <TextView
                            android:id="@+id/koinsampah"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            style="@style/normaltext"
                            android:text="@string/tv_koinsampah" />

                        <androidx.cardview.widget.CardView
                            android:id="@+id/card_jumlahkoin"
                            android:layout_width="60dp"
                            android:layout_height="wrap_content"
                            app:cardCornerRadius="10dp"
                            android:layout_marginTop="4dp"
                            app:cardBackgroundColor="@color/royalblue">
                            <TextView
                                android:id="@+id/jumlah_koin"
                                android:text="@string/tv_jumlahkoin"
                                android:textColor="@color/white"
                                android:layout_gravity="center"
                                android:textSize="12sp"
                                android:fontFamily="@font/montserrat_semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"/>
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>

                    <Button
                        android:id="@+id/tv_tukarbtn"
                        android:layout_width="92dp"
                        android:layout_height="48dp"
                        android:backgroundTint="@color/royalblue"
                        android:fontFamily="@font/montserrat_semibold"
                        android:text="@string/tv_tukarbtn"
                        android:textColor="@color/white"
                        android:textSize="11sp" />
                </LinearLayout>

                <!-- Bagian Misi Harian -->
                <TextView
                    android:id="@+id/misiharian"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="18dp"
                    android:layout_marginTop="14dp"
                    style="@style/normaltext"
                    android:text="@string/tv_misiharian" />

                <!-- Progress Bar -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="8dp"
                    android:paddingStart="18dp"
                    android:paddingEnd="18dp">

                    <ProgressBar
                        android:id="@+id/progressBar_mission"
                        android:layout_width="0dp"
                        android:layout_height="20dp"
                        android:layout_marginTop="4dp"
                        android:layout_weight="1"
                        android:progress="0"
                        android:max="100"
                        style="?android:attr/progressBarStyleHorizontal"
                        android:progressTint="@color/royalblue"/>

                    <TextView
                        android:id="@+id/rasiomisiharian"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="3dp"
                        android:layout_marginStart="8dp"
                        android:text="@string/tv_rasiomisiharian"
                        style="@style/normaltext" />
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/daftarsampahplastik"
            android:text="@string/tv_daftarsampahplasiktext"
            style="@style/fontdaftarsampah"
            android:layout_marginTop="12dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="353dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/botolairmineralcard"
                            android:layout_width="109dp"
                            android:layout_height="129dp"
                            android:layout_marginVertical="6dp"
                            android:layout_marginStart="30dp"
                            app:cardCornerRadius="5dp"
                            android:foregroundGravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/botolairmineral_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="18dp"
                                    android:src="@drawable/botolairmineral" />

                                <TextView
                                    style="@style/fontproduk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_botolairmineraltext" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/hargaproduk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_hargarp2200" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_satuankg"
                                        style="@style/satuankg"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_tag"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="5dp"/>

                                    <TextView
                                        android:text="@string/tv_plastiktext"
                                        style="@style/tagtext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tutupbotollcard"
                            android:layout_width="109dp"
                            android:layout_height="129dp"
                            android:layout_marginVertical="6dp"
                            android:layout_marginHorizontal="12dp"
                            app:cardCornerRadius="5dp"
                            android:foregroundGravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/tutupbotol_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="23dp"
                                    android:src="@drawable/tutupbotol" />

                                <TextView
                                    style="@style/fontproduk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_tutupbotoltext" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/hargaproduk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_hargarp3000" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_satuankg"
                                        style="@style/satuankg"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_tag"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="5dp"/>

                                    <TextView
                                        android:text="@string/tv_plastiktext"
                                        style="@style/tagtext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                        <androidx.cardview.widget.CardView
                            android:id="@+id/kantongplastikcard"
                            android:layout_width="109dp"
                            android:layout_height="129dp"
                            android:layout_marginVertical="6dp"
                            android:layout_marginEnd="30dp"
                            app:cardCornerRadius="5dp"
                            android:foregroundGravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/kantongplastik_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="33dp"
                                    android:src="@drawable/kantongplastik" />

                                <TextView
                                    style="@style/fontproduk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_kantongplastiktext" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/hargaproduk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_hargarp5000" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_satuankg"
                                        style="@style/satuankg"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_tag"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="5dp"/>

                                    <TextView
                                        android:text="@string/tv_plastiktext"
                                        style="@style/tagtext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/galoncard"
                            android:layout_width="109dp"
                            android:layout_height="129dp"
                            android:layout_marginVertical="6dp"
                            android:layout_marginStart="30dp"
                            app:cardCornerRadius="5dp"
                            android:foregroundGravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/galon_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="13dp"
                                    android:src="@drawable/galon" />

                                <TextView
                                    style="@style/fontproduk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_galontext" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/hargaproduk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_hargarp2200" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_satuankg"
                                        style="@style/satuankg"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_tag"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="5dp"/>

                                    <TextView
                                        android:text="@string/tv_plastiktext"
                                        style="@style/tagtext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/gelasplastikcard"
                            android:layout_width="109dp"
                            android:layout_height="129dp"
                            android:layout_marginVertical="6dp"
                            android:layout_marginHorizontal="12dp"
                            app:cardCornerRadius="5dp"
                            android:foregroundGravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/gelasplastik_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="11dp"
                                    android:src="@drawable/gelasplastik" />

                                <TextView
                                    style="@style/fontproduk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_gelasplatiktext" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/hargaproduk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_hargarp1500" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_satuankg"
                                        style="@style/satuankg"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_tag"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="5dp"/>

                                    <TextView
                                        android:text="@string/tv_plastiktext"
                                        style="@style/tagtext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>
                        <androidx.cardview.widget.CardView
                            android:id="@+id/bungkussnackcard"
                            android:layout_width="109dp"
                            android:layout_height="129dp"
                            android:layout_marginVertical="6dp"
                            android:layout_marginEnd="30dp"
                            app:cardCornerRadius="5dp"
                            android:foregroundGravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/bungkussnack_card"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="22dp"
                                    android:src="@drawable/bungkusplastik" />

                                <TextView
                                    style="@style/fontproduk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_bungkussnacktext" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/hargaproduk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_hargarp3500" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_satuankg"
                                        style="@style/satuankg"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_tag"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="5dp"/>

                                    <TextView
                                        android:text="@string/tv_plastiktext"
                                        style="@style/tagtext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/tempatcatcard"
                            android:layout_width="109dp"
                            android:layout_height="129dp"
                            android:layout_marginVertical="6dp"
                            android:layout_marginStart="30dp"
                            app:cardCornerRadius="5dp"
                            android:foregroundGravity="fill">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical">

                                <ImageView
                                    android:id="@+id/tempatcat_card"
                                    android:layout_width="43dp"
                                    android:layout_height="54dp"
                                    android:layout_gravity="center"
                                    android:layout_marginTop="24dp"
                                    android:src="@drawable/tempatcat" />

                                <TextView
                                    style="@style/fontproduk"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="@string/tv_tempatcat" />

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <TextView
                                        style="@style/hargaproduk"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_hargarp2200" />

                                    <TextView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text="@string/tv_satuankg"
                                        style="@style/satuankg"/>
                                </LinearLayout>

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <ImageView
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:src="@drawable/icon_tag"
                                        android:layout_marginStart="4dp"
                                        android:layout_marginTop="5dp"/>

                                    <TextView
                                        android:text="@string/tv_plastiktext"
                                        style="@style/tagtext"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"/>
                                </LinearLayout>
                            </LinearLayout>

                        </androidx.cardview.widget.CardView>

                    </LinearLayout>



                </LinearLayout>
            </ScrollView>

        </LinearLayout>

    </LinearLayout>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/navigation_bottom"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:labelVisibilityMode="labeled"
        android:background="@color/white"
        app:itemIconTint="@color/softgrey"
        app:itemTextColor="@color/softgrey"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:menu="@menu/navigation_bottom_menu"  />

</androidx.constraintlayout.widget.ConstraintLayout>